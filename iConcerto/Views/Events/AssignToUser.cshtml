@model iConcerto.Models.Events
<br />
<a href="@Url.Action("Index")" class="button-back"><i class="fas fa-long-arrow-alt-left"></i> Back</a>
<h3>Are you sure you want to join this event?</h3>
<hr />

<div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <p>You will receive email notification 24h before <b>"@Model.Name"</b> event!</p>
            <input type="submit" value="Join" class="btn btn-success pull-right" />
        </div>
    }
</div>